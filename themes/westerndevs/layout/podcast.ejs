<!--SUBHEAD STARTS-->
<div class="WrapperSubHeaderSubpage">
<center>
	<div class="SubHeader">
		<H1 class="title"><img class="icon" src="/images/icon_podcasts.png" alt="PODCAST" title="PODCAST" border="0"> PODCAST</H1>
	</div>
</center>
</div>
<!--SUBHEAD ENDS-->

<!--PAGE CONTENT STARTS-->
<center>
<div class="WrapperContent">

<!--MAIN CONTENT STARTS-->
	<div class="SubpageBoxSubLrg">
		<div class="SubpageBoxSubLrgContent">
		    <%- partial('_partial/post/title', { title: page.title, postDate: page.date }) %>

		    <div style='font-weight:bold'><b><%= page.excerpt%></b></div>
		    <div style="margin-bottom: 8px;">Recorded on <%=moment(page.recorded).format('dddd, MMMM D, YYYY')%></div>
            <% if (page.podcast.anchorFmId) { %>
            <div>
                <iframe class="desktop-only" src="https://anchor.fm/westerndevs/embed/episodes/<%=page.podcast.anchorFmId%>" height="102px" width="400px" frameborder="0" scrolling="no"></iframe>
                <iframe class="mobile-only" src="https://anchor.fm/westerndevs/embed/episodes/<%=page.podcast.anchorFmId%>" height="102px" width="270px" frameborder="0" scrolling="no"></iframe>
            </div>
		    <% } else if (page.podcast.libsynId) { %>
		    <div>
				<iframe class="desktop-only" style="border: none" src="//html5-player.libsyn.com/embed/episode/id/<%=page.podcast.libsynId%>/height/50/width/640/theme/standard/direction/no/autoplay/no/autonext/no/thumbnail/no/preload/no/no_addthis/no/" height="50" width="640" scrolling="no"  allowfullscreen webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen></iframe>
				<iframe class="mobile-only" style="border: none" src="//html5-player.libsyn.com/embed/episode/id/<%=page.podcast.libsynId%>/height/50/width/640/theme/standard/direction/no/autoplay/no/autonext/no/thumbnail/no/preload/no/no_addthis/no/" height="50" width="270" scrolling="no"  allowfullscreen webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen></iframe>
			</div>
			<enclosure url="http://traffic.libsyn.com/westerndevspodcast/<%=page.podcast.filename%>" length="<%=page.podcast.filesize%>" type="audio/mpeg" ></enclosure>
			<a class="btn btn-info" href="http://traffic.libsyn.com/westerndevspodcast/<%=page.podcast.filename%>" role="button" download>Download MP3</a>

			<% } else {%>
		    <div>
				<audio controls="" preload="metadata">
				<source src="http://cdn.westerndevs.com/podcasts/<%=page.podcast.filename%>" type="audio/mpeg">
				</audio>
			</div>
			<enclosure url="http://cdn.westerndevs.com/podcasts/<%=page.podcast.filename%>" length="<%=page.podcast.filesize%>" type="audio/mpeg" ></enclosure>
			<a class="btn btn-info" href="http://cdn.westerndevs.com/podcasts/<%=page.podcast.filename%>" role="button" download>Download MP3</a>

			<%}%>

			<div class="podcast-content">
	        <%- page.content %>
	        </div>

            <% if (page.comments && config.disqus_shortname){ %>
            <section id="comments">
            <div id="disqus_thread">
                <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
            </div>
            </section>
            <% } %>

		</div>
	</div>
<!--MAIN CONTENT ENDS-->

<%- partial('_widget/podcast_sidebar') %>

</div>
</center>
<!--PAGE CONTENT ENDS-->
